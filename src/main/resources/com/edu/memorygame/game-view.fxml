<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane>
        <BorderPane>
            <padding>
                <Insets bottom="25" left="25" right="25" top="25"/>
            </padding>
            <bottom>
                <VBox alignment="CENTER">
                    <Text fx:id="addPointsText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text=" ">
                        <font>
                            <Font name="Times New Roman Bold" size="20.0"/>
                        </font>
                    </Text>
                    <Text fx:id="timerText" strokeType="OUTSIDE" strokeWidth="0.0" text="Time spent: ">
                        <font>
                            <Font name="Times New Roman Bold" size="32.0"/>
                        </font>
                    </Text>
                </VBox>
            </bottom>
            <center>
                <GridPane fx:id="gameGrid" hgap="5.0" vgap="10.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="25" left="25" right="25" top="25"/>
                    </padding>
                </GridPane>
            </center>
        </BorderPane>
    </AnchorPane>
</ScrollPane>
